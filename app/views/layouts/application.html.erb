<!DOCTYPE html>
<html>
  <head>
    <title>Mariage Geraldine et Jean 2016</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>
  <body>
    <%= render "layouts/navbar" %>
    <div id="marge" class="margin-top-180">
    <%= yield %>
    </div>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false&key=AIzaSyANe92i44kVh91fplb7L6Gis08MJdDla1E"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
    <%= javascript_tag do %>
      $(function() {
        var width = $(window).width()
          if ((width <= 768)) {
              $('#marge').removeClass("margin-top-180")
              $('.navbar-wagon-height').css("height", 70)
              $('a.navbar-wagon-brand img').css("height", 50)
              $('a.navbar-wagon-brand img').css("width", 50)
          }
      });
      <% end %>
    <%= yield :after_js %>
  </body>
</html>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
function startTimer(duration, days_div, hours_div, minutes_div, seconds_div) {
    var timer = duration;
    setInterval(function () {
        days = parseInt(timer / (60 * 60 * 24), 10);
        hours = parseInt((timer / (60 * 60)) % 24, 10);
        minutes = parseInt((timer / 60) % 60, 10);
        seconds = parseInt(timer % 60, 10);
        hours = hours < 10 ? "0" + hours : hours;
        minutes = minutes < 10 ? "0" + minutes : minutes;
        seconds = seconds < 10 ? "0" + seconds : seconds;
        days_div.text(days);
        hours_div.text(hours);
        minutes_div.text(minutes);
        seconds_div.text(seconds);
        if (--timer < 0) {
            timer = duration;
        }
    }, 1000);
}
jQuery(function ($) {
    var start_date = new Date($.now());
        end_date = new Date(2016, 7, 27, 16, 0, 0);
        remainingTime = (end_date.getTime()/1000 - start_date.getTime()/1000);
        days_div = $('#days');
        hours_div = $('#hours');
        minutes_div = $('#minutes');
        seconds_div = $('#seconds');
    startTimer(remainingTime, days_div, hours_div, minutes_div, seconds_div);
});

      <% end %>


<div id="getting-started"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>

  $('#days').countdown('2016/06/04', function(event) {
    $(this).html(event.strftime('%D'));
  });

  $('#hours').countdown('2016/06/04', function(event) {
      $(this).html(event.strftime('%H'));
  });

  $('#minutes').countdown('2016/06/04', function(event) {
    $(this).html(event.strftime('%M'));
  });

  $('#secondes').countdown('2016/06/04', function(event) {
    $(this).html(event.strftime('%S'));
  });

  <% end %>
<% end %>



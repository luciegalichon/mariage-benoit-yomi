<div class= "col-xs-12 margin-bottom-20" >

  <div class="bg-height-100p border-total-green padding-20">

    <div class="text-left">

  <h2 class="text-center" style="color: black;"><%=covoiturage.title%></h2>
  <p><strong>Nom du conducteur : </strong><%=covoiturage.name%></p>
  <p><strong>Date aller : </strong><%=covoiturage.datea%>, date retour: <%=covoiturage.datea%></p>
  <p><strong>Lieu aller/retour : </strong><%=covoiturage.lieudep%></p>
  <p><strong>Nombre de places : </strong><%=covoiturage.nbplace%></p>
  <p><strong>Description : </strong><%=covoiturage.description%></p>

   </div>
  </div>

  <div class="bg-height-100p bg-pink padding-10">
    <p><strong><%= pluralize covoiturage.reviews.size, "Commentaires" %></strong></p>
    <% num = id+1%>
        <% if !covoiturage.reviews.blank? %>
          <div  id="review-<%=num%>" style="margin-bottom: 20px;">
            <% covoiturage.reviews.each_with_index do |review, i| %>
              <%= render 'reviews/show', review: review, number: i+1, id:i %>
            <% end %>
          </div>
        <%else%>
        <div  id="review-<%=num%>" style="margin-bottom: 20px;">
        </div>
        <% end %>
       <%= render 'reviews/new', review: @review, covoiturage: covoiturage %>
  </div>

</div>
